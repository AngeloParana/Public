
(prevTable as table,UserID as number) =>
let 
    FilterTableByUser = Table.SelectRows(prevTable,each [UserID]=UserID),
    GetTheParent =  FilterTableByUser[ParentID]{0}
in 
    if GetTheParent = null then "0"
    else 
        Text.From(#"Invoked Function"(prevTable,GetTheParent)) & "|" & Text.From(GetTheParent)
